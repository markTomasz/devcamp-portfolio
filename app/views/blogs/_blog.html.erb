<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

  <% if logged_in?(:site_admin) %>
    <div class="blog-class-meta">
      <%= link_to blog.status, toggle_status_blog_path(blog) %> | <%= link_to 'edit', edit_blog_path(blog) %> | <%= link_to 'delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

  <p>
    <%= markdown(blog.body) %>
  </p>
</div>